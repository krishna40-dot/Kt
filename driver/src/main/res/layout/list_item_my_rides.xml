<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv_pickUpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="20 Mar 2018, 11:38 AM"
            android:textColor="@color/text_color_normal"
            android:textSize="12sp" />

        <!--<ImageView
            android:id="@+id/img_taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_local_taxi_black_24dp"
            android:tint="@color/color_gray_dark"
            android:layout_marginRight="15dp"/>-->

        <TextView
            android:id="@+id/tv_pu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pickUpDate"
            android:layout_toEndOf="@+id/img_taxi"
            android:singleLine="true"
            android:text="PU: "
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pickup_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pickUpDate"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/tv_pu"
            android:singleLine="true"
            android:text="Pickup Address Pickup Address Pickup Address Pickup Address "
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pu"
            android:layout_toEndOf="@+id/img_taxi"
            android:singleLine="true"
            android:text="DO: "
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dropoff_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pu"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/tv_do"
            android:singleLine="true"
            android:text="DropOff Address DropOff Address "
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_theme_color"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="â‚¹67.53"
            android:textColor="@color/cpb_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pickup_address"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:text="Pending"
            android:textColor="@color/colorYellow"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorListDivider" />
</LinearLayout>