<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:custom="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/view_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/view"
                android:layout_margin="15dp"
                android:textColor="@color/text_color_dark"
                android:layout_centerVertical="true"/>
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view_navigate"
                android:background="@color/colorDivider"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toStartOf="@id/view_navigate"/>
            <LinearLayout
                android:id="@+id/view_navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:focusable="true"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:padding="15dp"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_navigation_blue"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAVIGATE"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_dark"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_navigation"
            android:layout_above="@id/actionButtons"/>
        <RelativeLayout
            android:id="@+id/actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btnArrived"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/ButtonSquare"
                android:background="@color/white"
                android:textColor="@color/colorPrimaryExtraDark"
                android:text="Arrived"
                android:textSize="22sp"/>

            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/btnStartRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/slide_to_start_ride"
                app:text_appearance="@style/TextAppearance.BoldFont"
                app:text_size="18sp"
                app:text_color="@color/white"
                app:outer_color="@color/colorSuccess"
                app:border_radius="5dp"
                android:visibility="gone"/>
            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/btnEndRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/slide_to_end_ride"
                app:text_appearance="@style/TextAppearance.BoldFont"
                app:text_size="22sp"
                app:text_color="@color/color_gray_dark"
                app:inner_color="@color/color_gray_dark"
                app:outer_color="@color/colorWarning"
                app:border_radius="5dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <com.taxiappclone.common.view.CircleImageView
                android:id="@+id/img_rider"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                app:civ_border_width="0.5dip"
                android:layout_margin="15dp"
                app:civ_border_color="@color/color_gray_light"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_rider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rider Name"
                android:textSize="22sp"
                android:textColor="@color/text_color_dark"
                android:layout_marginTop="15dp"
                android:layout_alignEnd="@+id/view1"
                android:layout_toEndOf="@+id/img_rider"/>
            <TextView
                android:id="@+id/tv_destination_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICKUP"
                android:textSize="18sp"
                android:textColor="@color/cpb_blue_dark"
                android:layout_alignEnd="@+id/view1"
                android:layout_toEndOf="@+id/img_rider"
                android:layout_below="@+id/tv_rider_name"/>
            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view_contact"
                android:background="@color/colorDivider"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toStartOf="@id/view_contact"/>

            <LinearLayout
                android:id="@+id/view_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:focusable="true"
                android:clickable="true"
                android:padding="15dp"
                android:background="?selectableItemBackground"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_message_black_24dp"
                    android:tint="@color/cpb_blue"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_dark"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignBottom="@+id/map"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_my_location_black_24dp"
            android:background="@drawable/bg_circle_white"
            android:visibility="visible"
            />
    </RelativeLayout>
</LinearLayout>

<fragment
    android:id="@+id/fragment_navigation_drawer"
    android:name="com.taxiappclone.driver.activity.FragmentDrawer"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    custom:layout="@layout/fragment_driver_tracking_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>

